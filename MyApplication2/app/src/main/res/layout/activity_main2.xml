<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="통계"
                    android:textColor="@color/tt"
                    android:background="@color/bb"
                    android:onClick="chart"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="내용추가"
                    android:textColor="@color/black"
                    android:background="@color/bb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="홈"
                    android:onClick="btn2"
                    android:textColor="@color/tt"
                    android:background="@color/bb"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/text1">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:background="@color/cc">
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <LinearLayout
                    android:id="@+id/in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center">
                            <TableRow
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/day"
                                    android:textColor="@color/tt"
                                    android:padding="10dp"
                                    android:textSize="15dp"/>
                            </TableRow>
                            <TableRow
                                android:gravity="center">
                                <Button
                                    android:text="용돈"
                                    android:textSize="10dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="3dp"
                                    android:padding="0dp"
                                    android:background="#EAEAEA"
                                    android:textColor="@color/tt"
                                    android:id="@+id/btnIn1"/>
                                <Button
                                    android:text="월급"
                                    android:textSize="10dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="3dp"
                                    android:padding="0dp"
                                    android:background="#EAEAEA"
                                    android:textColor="@color/tt"
                                    android:id="@+id/btnIn2"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <EditText
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:textColor="@color/tt"
                                    android:id="@+id/edtmoney"
                                    android:inputType="number"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="원"
                                    android:textColor="@color/tt"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="내용"
                                    android:textColor="@color/tt"/>
                                <EditText
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:textColor="@color/tt"
                                    android:id="@+id/edttext"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnInsert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="#D5D5D5"
                                android:onClick="btn3"
                                android:text="입력"
                                android:textColor="@color/tt" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center">
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center">
                            <TableRow
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/day2"
                                    android:textColor="@color/tt"
                                    android:padding="10dp"
                                    android:textSize="15dp"/>
                            </TableRow>
                            <TableRow
                                android:gravity="center">
                                <Button
                                    android:text="식비"
                                    android:textSize="10dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="3dp"
                                    android:padding="0dp"
                                    android:background="#EAEAEA"
                                    android:textColor="@color/tt"
                                    android:id="@+id/btnOut1"/>
                                <Button
                                    android:text="교통비"
                                    android:textSize="10dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="3dp"
                                    android:padding="0dp"
                                    android:background="#EAEAEA"
                                    android:textColor="@color/tt"
                                    android:id="@+id/btnOut2"/>
                            </TableRow>
                            <TableRow
                                android:gravity="center">
                                <Button
                                    android:text="통신비"
                                    android:textSize="10dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="3dp"
                                    android:padding="0dp"
                                    android:background="#EAEAEA"
                                    android:textColor="@color/tt"
                                    android:id="@+id/btnOut3"/>
                                <Button
                                    android:text="공과금"
                                    android:textSize="10dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="3dp"
                                    android:padding="0dp"
                                    android:background="#EAEAEA"
                                    android:textColor="@color/tt"
                                    android:id="@+id/btnOut4"/>
                                <Button
                                    android:text="생필품"
                                    android:textSize="10dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="3dp"
                                    android:padding="0dp"
                                    android:background="#EAEAEA"
                                    android:textColor="@color/tt"
                                    android:id="@+id/btnOut5"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <EditText
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:textColor="@color/tt"
                                    android:id="@+id/edtmoney2"
                                    android:inputType="number"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="원"
                                    android:textColor="@color/tt"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="내용"
                                    android:textColor="@color/tt"/>
                                <EditText
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:textColor="@color/tt"
                                    android:id="@+id/edttext2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="입력"
                                android:layout_gravity="top"
                                android:background="#D5D5D5"
                                android:textColor="@color/tt"
                                android:onClick="btn3"
                                android:id="@+id/btnInsert2"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</TabHost>